<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false"><!-- android:drawable="@drawable/btn_white_res_normal" -->
        <shape>
            <!-- 圆角，你也可以对不同的角设置不同的数值 -->
            <corners android:radius="0.0dp" />
            <!-- 边框宽度和颜色 -->
            <!--stroke android:color="@color/black" android:dashWidth="0dp" android:width="1px"/-->
            <!-- 形状的填充色 -->
            <solid android:color="#f8f8f8" />
            <!--padding android:left="5dp" android:right="5dp" android:top="2dp" android:bottom="2dp"/-->
        </shape>
    </item>
    <item android:state_pressed="true"><!-- android:drawable="@drawable/btn_white_res__pressed" -->
        <shape>
            <corners android:radius="0.0dp" />
            <!--stroke android:color="#E6E6E6"/>
            <solid android:color="#E6E6E6"/>
            <padding android:left="10dp" android:right="10dp" android:top="2dp" android:bottom="2dp"/-->
        </shape>
    </item>
</selector>